#!/bin/sh
ssh ubuntu@13.125.248.54 <<EOF	
    cd ~/github-folder		
    git pull origin main
    curl -o-   https://raw.githubusercontent.com/creationix/nvm/v0.33.8/install.sh    | bash
    . ~/.nvm/nvm.sh 
    nvm install 16.16.0	
    npm install
    npm install -g pm2
    pm2 restart app.js
    exit
EOF
